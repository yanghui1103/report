				<report id="report10" parenttitle="Wabacus专有格式的更新SQL语句" extends="editablelistreportpage1.report1">
					<sql>
					  <select>
						<value>
							<![CDATA[SELECT * FROM tbl_department where  {#condition#} order by deptno]]>
						</value>
						<condition name="txtdeptno" label="部门编号">
							<value>
								<![CDATA[(deptno like  '%#data#%' )]]>
							</value>
						</condition>
					  </select>
					  <insert>
				  		 insert into tbl_department(guid=uuid{},@{deptno},@{deptname},@{manager},@{builtdate},@{performance});
					  </insert>
					  <update preparedstatement="false">
					     update tbl_department(@{deptno},@{deptname},@{manager},@{builtdate},@{performance}) where guid=@{guid};
					     update tbl_baseinfo(@{deptno}) where deptno=@{deptno__old};
					  </update>
					  <delete>
					  	 delete from tbl_department where deptno=@{deptno__old};
					  </delete>
					</sql>
				</report>
				<report id="report11" parenttitle="标准格式的更新SQL语句" extends="editablelistreportpage1.report1">
					<sql>
					  <select>
						<value>
							<![CDATA[SELECT * FROM tbl_department where  {#condition#} order by deptno]]>
						</value>
						<condition name="txtdeptno" label="部门编号">
							<value>
								<![CDATA[(deptno like  '%#data#%' )]]>
							</value>
						</condition>
					  </select>
					  <insert>
					  	  <params>
					  	 	 <param name="uuid" value="uuid{}"/>
					  	  </params>
					  	  <value>
				  		 		insert into tbl_department(guid,deptno,deptname,manager,builtdate,performance) values(#{uuid},@{deptno},@{deptname},@{manager},@{builtdate},@{performance});
				  		  </value>
					  </insert>
					  <update preparedstatement="false" originalparams="true">
					     update tbl_department set deptno='@{deptno}',deptname='@{deptname}',manager='@{manager}_测试',builtdate='@{builtdate}',performance='@{performance}' where guid='@{guid}';
					     update tbl_baseinfo(@{deptno}) where deptno=@{deptno__old};
					  </update>
					  <delete>
					  	 delete from tbl_department where deptno=@{deptno__old} and guid=@{guid};
					  </delete>
					</sql>
				</report>
				<footer><![CDATA[<font color='red'>说明：</font><font color='blue'>两种格式的更新语句都分别演示了采用preparedstatement方式和statement方式执行</font>]]></footer>
